{
  "name": "vite-app-demo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "build:staging": "vue-tsc --noEmit && vite build --mode staging",
    "build": "vite build --mode production",
    "preview": "vite preview --port=443",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --fix src/",
    "lint:check": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src/",
    "format": "prettier . --write --ignore-path .gitignore",
    "format:check": "prettier . --check --ignore-path .gitignore",
    "lint:style": "stylelint ./src/**/*.{css,vue} --fix --ignore-path .gitignore",
    "lint:style:check": "stylelint ./src/**/*.{css,vue} --ignore-path .gitignore",
    "lint-staged": "lint-staged",
    "prepare": "cd .. && husky install",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@vueuse/head": "^1.0.22",
    "flowbite": "^1.6.0",
    "flowbite-vue": "^0.0.10",
    "pinia": "^2.0.28",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@algolia/client-search": "^4.14.3",
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.26.3",
    "@vue/test-utils": "^2.2.7",
    "autoprefixer": "^10.4.13",
    "c8": "^7.12.0",
    "cssnano": "^5.1.14",
    "cssnano-preset-advanced": "^5.3.9",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-define-config": "^1.13.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tailwindcss": "^3.8.0",
    "eslint-plugin-vue": "^9.8.0",
    "happy-dom": "^8.1.3",
    "husky": "^8.0.3",
    "less": "^4.1.3",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^29.0.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-pwa": "^0.14.1",
    "vitest": "^0.26.3",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^1.0.22",
    "workbox-window": "^6.5.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,vue}": [
      "eslint --ignore-path .gitignore --fix",
      "prettier --ignore-path .gitignore --write"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --ignore-path .gitignore --parser json --write"
    ],
    "package.json": ["prettier --ignore-path .gitignore --parser json --write"],
    "*.md": ["prettier --ignore-path .gitignore --write"]
  },
  "peerDependencies": {
    "@algolia/client-search": "^4.14.2",
    "postcss": "^8.0.0"
  },
  "cssnano": {
    "preset": "advanced"
  }
}
